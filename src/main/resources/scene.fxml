<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tasktimer.controller.MainController">
    <HBox fx:id="hbox" spacing="10" alignment="CENTER">
        <VBox spacing="20" alignment="CENTER">
            <Label fx:id="timerLabel" text="0:00:00">
                <font>
                    <Font size="40"/>
                </font>
            </Label>
            <Button fx:id="controlBtn"
                    prefWidth="250" prefHeight="50"
                    onMouseClicked="#stopwatchControl">
                Start
            </Button>
            <Button fx:id="resetBtn"
                    prefWidth="250" prefHeight="10"
                    onMouseClicked="#reset">
                Reset
            </Button>
        </VBox>
        <VBox spacing="20" alignment="CENTER">
            <TextArea fx:id="timePointArea" editable="false" prefWidth="200" maxWidth="Infinity">
                <font>
                    <Font size="18"/>
                </font>
            </TextArea>
        </VBox>
    </HBox>
</AnchorPane>