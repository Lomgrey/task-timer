<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tasktimer.controller.MainController"
      spacing="20" alignment="CENTER">
    <Label fx:id="timerLabel" text="0:00:00">
        <font>
            <Font size="40"/>
        </font>
    </Label>
    <Button fx:id="controlBtn"
            prefWidth="250" prefHeight="50"
            onMouseClicked="#stopwatchControl">
        Start
    </Button>
    <Button fx:id="resetBtn"
            prefWidth="250" prefHeight="10"
            onMouseClicked="#reset">
        Reset
    </Button>
</VBox>